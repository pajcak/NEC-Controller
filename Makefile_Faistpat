CC=g++
CFLAGS=-c -fPIC -Wall -pedantic -Wno-long-long
LDFLAGS=-lpthread

SOURCES=$(wildcard *.cpp)

OBJS=$(SOURCES:.cpp=.o)
EXEC=faistpat

all: compile doc shared

compile: $(EXEC)

$(EXEC): $(OBJS)
	$(CC) $(OBJS) -L. -o $@ $(LDFLAGS)

run:
	./$(EXEC)

doc:
	doxygen ./doxy_config

%.o: %.cpp 
	$(CC) $(CFLAGS) -c $< -o $@

shared: CController.o
	$(CC) -shared -o controller.so CController.o

clean:
	rm -rf $(OBJS) $(EXEC) ./doc controller.so
